<section class="hero-banner">
    {% if section.settings.image != blank %}
        <img width="" height="" loading="lazy" src="{{ section.settings.image | image_url }}" alt="Hero image tennis">
    {% else %}
        <img width="" height="" loading="lazy" srcset="{{ 'banner.webp' | asset_url }} 767w,
           {{ 'banner@2x.webp' | asset_url }} 1024w,
            {{ 'banner@3x.webp' | asset_url }} 1920w" src="{{ 'banner@3x.webp' | asset_url }}" alt="Hero image tennis">
    {% endif %}
    <div class="hero-banner__text-wrap">
        <h1 class="hero-banner__banner-text">Las mejores raquetas para jugar <span class="highlight">Tennis</span></h1>
        <a href="/pages/acerca-de" class="hero-banner__main-link">Acerca De Nosotros <span>&#8594;</span></a>
    </div>
</section>

{% schema %}
{
    "name":"Banner",
    "settings":[
        {
            "type":"image_picker",
            "id":"image",
            "label":"pick image",
            "info": "webp"
        }
    ],
    "presets":[
        {
            "name":"banner"
        }
    ]
}
{% endschema %}