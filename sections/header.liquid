<a href="" class="header-logo">
    <img width="" height="" src="{{ 'store-logo.webp' | asset_url }}" alt="">
</a>
<a href="#" class="navbar-toggle"><span></span></a>
<nav class="header-navbar navbar-collapse">
    <ul>
        <li><a href="/" class="active">Inicio</a></li>
        <li><a href="/pages/acerca-de">Acerca de nosotros</a></li>
        <li><a href="/pages/historia">Historia</a></li>
        <li><a href="/pages/contacto">Contacto</a></li>
        {% comment %} {% if section.block.size == 0 %}
            <li><a href="/">Inicio</a></li>
            <li><a href="/pages/acerca-de">Acerca de nosotros</a></li>
            <li><a href="/pages/historia">Historia</a></li>
            <li><a href="/pages/contacto">Contacto</a></li>
        {% else %}
            {% for block in section.block %}
                <li><a href="{{ block.settings.link }}">{{ block.settings.text }}</a></li>
            {% endfor %}
        {% endif %} {% endcomment %}
    </ul>
</nav>

<div class="header-langs">
    <a href="">ES</a>
    <a href="">EN</a>
</div>
{% schema %}
{
    "name":"Header",
    "settings":[],
    "blocks":[
        {
            "name":"Links",
            "type":"links",
            "limit":5,
            "settings":[
                {
                    "type":"text",
                    "id":"text",
                    "label":"Text",
                    "default":"link"
                },
                {
                    "type":"url",
                    "id":"link",
                    "label":"Link"
                }
            ]
        }
    ],
    "presets":[
        {
            "name":"header"
        }
    ]
}
{% endschema %}